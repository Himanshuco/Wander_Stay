<% layout("/layouts/boilerplate") %>
<div class="container mt-5">
  <h2><strong><%= user.username %></strong>'s Profile</h2>

  <h3 class="mt-4">My Listings</h3>
  <% if (listings.length === 0) { %>
    <p>No listings yet.</p>
  <% } else { %>
    <div class="row">
        <% listings.forEach(listing => { %>
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
            <div class="card shadow-sm w-100 d-flex flex-column">
                <% if(listing.image && listing.image.url) { %>
                <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                <% } else { %>
                <img src="https://via.placeholder.com/400x200?text=No+Image" class="card-img-top" alt="No image available">
                <% } %>
                <div class="card-body d-flex flex-column">
                <h5 class="card-title"><a href="/listings/<%= listing._id %>"><%= listing.title %></a></h5>
                <p class="card-text flex-grow-1"><%= listing.description.substring(0, 100) %>â€¦</p>
                <small class="text-muted"><%= listing.location %>, <%= listing.country %></small>

                <h6 class="mt-3">Reviews:</h6>
                <% if (listing.reviews.length === 0) { %>
                    <p><em>No reviews yet.</em></p>
                <% } else { %>
                    <ul class="mb-3">
                    <% listing.reviews.forEach(rev => { %>
                        <li><strong><%= rev.author?.username || 'Unknown' %>:</strong> <%= rev.content %> (<%= rev.rating %>/5)</li>
                    <% }) %>
                    </ul>
                <% } %>
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary mt-auto">Update</a>
             </div>
        </div>
    </div>
  <% }); %>
</div>


  <% } %>

</div>

