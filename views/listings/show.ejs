<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
      <h1 class="mb-4"><%= listing.title %></h1>
      <div class="card shadow card-rounded" style="overflow: hidden;">
        <img 
          src="<%= listing.image.url %>" 
          class="card-img-top img-fluid show-img mb-3" 
          alt="listing_image"
          style="object-fit: cover; max-height: 400px;"
        />
        <div class="card-body">
          <p class="card-text">
            <i>Owner: <%= listing.owner?.username || "Unknown" %></i><br/>
            <%= listing.description %><br/>
            &#8377; <%= listing.price.toLocaleString("en-In") %><br/>
            <%= listing.location %><br/>
            <%= listing.country %><br/>
      
          </p>
        </div>
        
        <div class="d-flex gap-2 mt-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark del-btn">Delete</button>
          </form>
        </div>
       
      

      <!-- Review Form -->
      <div class="card mt-5">
        <% if (typeof currUser === 'undefined' || currentUser && currentUser._id.toString() !== listing.owner._id.toString()) { %>
            <div class="d-grid gap-2 mt-4">
              <a href="/listings/<%= listing._id %>/book" class="btn btn-danger btn-lg">Book Now</a>
            </div>
          <% } else if (!currentUser) { %>
            <div class="alert alert-warning mt-4">
              <a href="/login">Log in</a> to book this listing.
            </div>
        <% } %>


        <div class="card-header bg-dark text-white">
          Leave a Review
        </div>
        <div class="card-body">
  
          <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <!-- <div class="mb-3">
              <label for="reviewerName" class="form-label">Your Name</label>
              <input type="text" name="review[name]" class="form-control" id="reviewerName" required>
            </div> -->

            <div class="mb-3">
              <label for="reviewRating" class="form-label">Rating</label>
              <select class="form-select" name="review[rating]" id="reviewRating" required>
                <option value="">Select Rating</option>
                <option value="5">5 - Excellent</option>
                <option value="4">4 - Very Good</option>
                <option value="3">3 - Good</option>
                <option value="2">2 - Fair</option>
                <option value="1">1 - Poor</option>
              </select>
            </div>

            <div class="mb-3">
              <label for="reviewContent" class="form-label">Review</label>
              <textarea name="review[content]" class="form-control" id="reviewContent" rows="4" required></textarea>
              <div class="invalid-feedback">Enter a review</div>
            </div>

            <button type="submit" class="btn btn-dark">Submit Review</button>
          </form>
          <hr/>
          <h4>All Reviews</h4>
          <div class="row">
          <% for (review of listing.reviews) { %>
            <div class="col-md-4 mb-4">
              <!-- Review Card -->
              <div class="card shadow-sm rounded border-light">
                <div class="card-body">
                  <!-- Reviewer Name and Rating -->
                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="card-title"><strong><%= review.author.username %></strong></h5>
                    <span class="badge bg-<%= review.rating >= 4 ? 'success' : review.rating >= 3 ? 'warning' : 'danger' %>">
                      <%= review.rating %>/5
                    </span>
                  </div>

                  <!-- Review Content -->
                  <p class="card-text">
                    <%= review.content %>
                  </p>

                  <!-- Review Timestamp -->
                  <small class="text-muted">Reviewed on <%= review.createdAt.toLocaleDateString() %></small>

                  <!-- Delete Button -->
                  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mt-3">
                    <button type="submit" class="btn btn-danger btn-sm w-100">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          <% } %>
        </div>
        <!-- <p><%=listing.reviews %></p> -->
        </div>
      </div>
    </div>
</div>
</div>
